@model IEnumerable<string>
@{ ViewBag.Title = "Error";}

<!--wyświtlenie widoku błędu z odpowidnią informacją lub informacjami o błędzie-->
<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            <!--jesli nie podano błędu to wyświetlam domyślną informację-->
            @: Something went wrong. Please try again
            break;
        case 1:
            @Model.First();
            break;
        default:
            @: The following errors were encounted:
            <ul>
                @foreach (string error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
<!--przekierowanie na stronę główną-->
@Html.ActionLink("OK", "Index", "Home")

